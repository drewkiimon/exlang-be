generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             Int        @id @default(autoincrement())
  uuid           String     @unique @default(uuid())
  firstName      String     @map("first_name")
  lastName       String     @map("last_name")
  username       String     @unique
  email          String     @unique
  credentialUuid String     @unique @map("credential_uuid")
  posts          Post[]
  credential     Credential @relation(fields: [credentialUuid], references: [uuid])
  updatedAt      DateTime   @updatedAt @map("updated_at")
  createdAt      DateTime   @default(now()) @map("created_at")

  @@map("users")
}

model Credential {
  id             Int      @id @default(autoincrement())
  uuid           String   @unique @default(uuid())
  saltedPassword String   @map("salted_password")
  salt           String
  user           User?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("credentials")
}

model Post {
  id         Int      @id @default(autoincrement())
  uuid       String   @unique @default(uuid())
  title      String?
  content    String
  authorUuid String   @map("author_uuid")
  author     User     @relation(fields: [authorUuid], references: [uuid])
  updatedAt  DateTime @updatedAt @map("updated_at")
  createdAt  DateTime @default(now()) @map("created_at")

  @@index([createdAt])
  @@index([authorUuid, createdAt])
  @@map("posts")
}
